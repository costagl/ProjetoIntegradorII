@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item nav-cadastro">
            <a id="manage" class="nav-link text-dark" asp-controller="Candidato" asp-action="Details" title="Manage">@UserManager.GetUserName(User)</a>
        </li>

        <li class="nav-item nav-login">
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Sair</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item nav-cadastro">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register"><i class="fa-solid fa-user-plus" style="padding-right: 4px"></i>Cadastrar-se</a>
        </li>
        <li class="nav-item nav-login">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
